
# Test Setup for Auth/Headers (change between HTTP/HTTPS)
# URL: http://localhost/usp-s3-test/tears-of-steel/tears-of-steel.ism/.mpd
docker run -d -e \
  LOG_LEVEL=debug \
  --name origin-me-https-auth \
  -e USP_LICENSE_KEY=${USP_LICENSE_KEY} \
  -v /Users/jamiefletcher/Media:/var/www/unified-origin \
  -e REMOTE_STORAGE_URL=https://usp-s3-test.s3.eu-west-1.amazonaws.com/ \
  -e REMOTE_PATH=usp-s3-test \
  -e S3_SECRET_KEY=M2OfZ1bI502U+u1SDfnMQLeHFfvdmU3lsOOyNGj6 \
  -e S3_ACCESS_KEY=AKIAR4VSZHLVHHMVE2MY \
  -e S3_REGION=eu-west-1 \
  -p 80:80  \
  -p 81:81 \
  origin-me-test:latest


# Test Setup for public bucket (change between HTTP/HTTPS)
# URL: http://localhost/usp-s3-test/tears-of-steel/tears-of-steel.ism/.mpd
docker run -d -e \
  LOG_LEVEL=debug \
  --name origin-me-https-auth \
  -e USP_LICENSE_KEY=${USP_LICENSE_KEY} \
  -v /Users/jamiefletcher/Media:/var/www/unified-origin \
  -e REMOTE_STORAGE_URL=https://usp-s3-storage.s3.eu-central-1.amazonaws.com/ \
  -e REMOTE_PATH=usp-s3-storage \
  -p 80:80  \
  -p 81:81 \
  origin-me-test:latest
